#:kivy 1.0.9

<Review>:
    BoxLayout:
        id: box_layout
        size_hint: 1, 1
        orientation: "vertical"
        BoxLayout:
            pos: 0, 0
            size_hint: 1, None
            height: 60
            orientation: "horizontal"
            Button:
                size_hint: 0.1, 1
                border: 0.54, 0, 0, 0
                background_color: 0.9, 0.9, 0.9, 1
                background_normal: ""
                background_down: ""
                color: 0.5, 0, 0.6, 0.5
                text: ""  # The menu character
                font_name: root.font_awesome
                on_press:
                    root.manager.current = "menu"
                    root.manager.transition.direction = "right"
            Label:
                id: header_label
                size_hint: 0.8, 1
                multiline: False
                text: "Flash Cards"
                font_name: root.font
                font_size: 18
                background_color: 1, 1, 1, 1
                border: 0.1, 0.1, 0.1, 0.1
                color: 0.5, 0, 0.6, 0.5
                padding: ["14dp", "14dp"]
            Button:
                size_hint: 0.1, 1
                color: 0.5, 0, 0.6, 0.5
                background_color: 0.9, 0.9, 0.9, 1
                background_normal: ""
                background_down: ""
                font_name: root.font_awesome
                text: ""  # The trash character
                on_press: root.remove_button_clicked()
        Label:
            id: flashcard
            color: 1, 1, 1, 1
            text: ""
            size_hint: 1, None
            height: 15
            canvas:
                Color:
                    rgba: 0.5, 0, 0.6, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_type: root.font
            font_size: 12
        ScrollView:
            id: scroll_view
            BoxLayout:
                size_hint: 1, 1
                orientation: "vertical"
                Label:
                    id: flashcard
                    size_hint: 1, 1
                    multiline: False
                    text: "Flash card text"
                    font_name: root.font
                    font_size: 36
                    canvas:
                        Color:
                            rgba: 0.5, 0, 0.6, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    color: 0, 0, 0, 1
                BoxLayout:
                    size_hint: 1, 0.4
                    Button:
                        size_hint: 0.1, 1
                        color: 0.5, 0, 0.6, 0.5
                        background_color: 0.9, 0.9, 0.9, 1
                        background_normal: ""
                        background_down: ""
                        font_name: root.font
                        font_size: 20
                        text: "Easy"
                        on_press: root.easy_clicked()
                    Button:
                        size_hint: 0.1, 1
                        color: 0.5, 0, 0.6, 0.5
                        background_color: 0.9, 0.9, 0.9, 1
                        background_normal: ""
                        background_down: ""
                        font_name: root.font
                        font_size: 20
                        text: "Difficult"
                        on_press: root.difficult_clicked()